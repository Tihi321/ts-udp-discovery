{
  "name": "ts-udp-discovery",
  "version": "2.0.2",
  "description": "Provides zero-config discovery service using broadcast UDP.",
  "main": "index.js",
  "scripts": {
    "test": "ava --tap | tap-xunit > ./test-reports/ava.xml",
    "build": "tsc -p tsconfig.json",
    "lint-staged": "lint-staged",
    "lint": "eslint ./src --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Tihi321/ts-udp-discovery.git"
  },
  "keywords": [
    "discovery",
    "distributed",
    "supercluster",
    "udp",
    "multicast",
    "tcp"
  ],
  "author": "Edmond Meinfelder, Ryan Pannell, Tihomir Selak",
  "license": "MIT",
  "dependencies": {
    "debug": "4.3.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/debug": "^4.1.5",
    "eslint": "^7.15.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^6.0.0",
    "commitlint": "^11.0.0",
    "commitlint-config-jira": "^1.4.1",
    "commitlint-plugin-jira-rules": "^1.4.0",
    "tap-xunit": "^2.4.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "esm": "^3.2.25",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "ava": "^3.13.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "ts-node/register/transpile-only"
    ]
  },
  "commitlint": {
    "plugins": [
      "commitlint-plugin-jira-rules"
    ],
    "extends": [
      "jira"
    ]
  },
  "lint-staged": {
    "./src/*.ts": "eslint"
  }
}
